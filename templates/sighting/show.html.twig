{% extends 'base.html.twig' %}

{% block title %}Sighting{% endblock %}

{% block body %}
	<h1>Sighting</h1>

	<table class="table">
		<tbody>
		<tr>
			<th>Id</th>
			<td>{{ sighting.id }}</td>
		</tr>
		<tr>
			<th>Location</th>
			<td>{{ sighting.Location }}</td>
		</tr>
		<tr>
			<th>DateTime</th>
			<td>{{ sighting.DateTime ? sighting.DateTime|date('Y-m-d H:i:s') : '' }}</td>
		</tr>
		<tr>
			<th>Comment</th>
			<td>{{ sighting.Comment }}</td>
		</tr>
		</tbody>
	</table>
	<section class="species-data">
	{{ species|raw }}
	</section> "
	<a href="{{ path('app_sighting_index') }}">back to list</a>

	{% if sighting.user == app.user %}
		<a href="{{ path('app_sighting_edit', {'id': sighting.id}) }}">edit</a>


		{{ include('sighting/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
