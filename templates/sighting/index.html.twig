{% extends 'base.html.twig' %}

{% block title %}Sighting index{% endblock %}

{% block body %}
	<h1>Sk√•dningar</h1>

	<div class="container list">
		{% for sighting in sightings %}
			<div class="list-item">
				<div class="sighting">
						<span>{{ sighting.species.fullName }}</span>
						<span>{{ sighting.location }}</span>
						<span>{{ sighting.dateTime|date('Y-m-d') }}</span>
						<span>{{ sighting.comment }}</span>
				</div>

				<div class="links">
					<a href="{{ path('app_sighting_show', {'id': sighting.id}) }}">Visa</a>
					{% if sighting.user == app.user %}

						<a href="{{ path('app_sighting_edit', {'id': sighting.id}) }}">Registera</a>
					{% endif %}
				</div>

			</div>
		{% else %}
			<h2>no records found</h2>
		{% endfor %}
	</div>
	<a href="{{ path('app_sighting_new') }}">Registrera nytt</a>
{% endblock %}
