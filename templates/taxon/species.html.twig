{% extends 'base.html.twig' %}
{% block title %}
	{{ species.vernacularName|capitalize }}
{% endblock %}

{% block body %}
	<section class="base-data flex wrap s-column">
		<div class="col-2">
			<h1>{{ species.vernacularName|capitalize }}<br><small>{{ species.scientificName|capitalize }}</small></h1>
			<span>{{ species.swedishProminence }}</span>

			<div class="gap-3 my-1">
				<a href="{{ path('app_sighting_new', {'species': species.id}) }}" class="button">Registrera glutt</a>
			</div>
		</div>
		<div class="col-2">
			<div class="species-data">
				<div class="taxonomy">
					<span>{{ species.family.taxOrder.class|capitalize }}</span>
					<div>
						<div class="hierarchy-tree"></div>
						<div class="taxonomy">
							<span>{{ species.family.taxOrder|capitalize }}</span>
							<div class="hierarchy-tree">
								<div class="taxonomy">
									<span>{{ species.family|capitalize }}</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>

	</section>
	{{ artfakta|raw }}
{% endblock %}
